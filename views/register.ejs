<!-- Language switcher in top right corner -->
<div class="container-fluid">
  <div class="row justify-content-end">
    <div class="col-auto lang-switcher mt-2">
      <div class="btn-group" role="group">
        <%- include('./languageSwitcher'); -%>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fa-regular fa-user"></i> <%= getTranslation(title) %>
        </h1>
        <%- include('./partials/alerts'); -%>
        <form
          id="register-form"
          action="/auth/register?lang=<%= lang %>"
          method="POST"
        >
          <div class="mb-3">
            <label for="username" class="form-label"
              ><%= getTranslation("user.username") %></label
            >
            <input type="text" class="form-control" id="username"
            name="username" placeholder="<%=
            getTranslation("placeholder.username") %>" autocomplete="off" />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label"
              ><%= getTranslation("user.password") %></label
            >
            <input type="password" class="form-control" id="password"
            name="password" placeholder="<%=
            getTranslation("placeholder.password") %>" autocomplete="off" />
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label"
              ><%= getTranslation("user.confirm_password") %></label
            >
            <input type="password" class="form-control" id="confirmPassword"
            name="confirmPassword" placeholder="<%=
            getTranslation("placeholder.confirm_password") %>"
            autocomplete="off" />
          </div>
          <button
            id="register-btn"
            type="submit"
            class="btn btn-primary btn-block"
          >
            <%= getTranslation("button.submit") %>

            <span id="register-btn-spinner"> </span>
          </button>
        </form>
        <p class="lead mt-4">
          <%= getTranslation("lead.login") %>
          <a href="/auth/login?lang=<%= lang %>"
            ><%= getTranslation("user.login") %></a
          >
        </p>
      </div>
    </div>
  </div>
</div>
