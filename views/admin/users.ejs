<div class="tab-pane fade" id="users-tab">
  <% if (typeof users === 'undefined' || users.length === 0) { %>
  <div class="alert alert-info" role="alert">
    <i class="fas fa-info-circle"></i> There are no users or the user list is
    empty.
  </div>
  <% } else { %>
  <!-- Users list -->
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Username</th>
        <th scope="col">User Type</th>
        <th scope="col">Status</th>
        <th scope="col">Created Date</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user) => { %>
      <!-- User item -->
      <tr class="<%= user.active ? '' : 'suspended-user' %>">
        <td><%= user.username %></td>
        <td>
          <span class="badge <%= user.isAdmin ? 'bg-primary' : 'bg-secondary' %>">
            <%= user.isAdmin ? 'Admin' : 'User' %>
          </span>
          <% if (user.isSuperAdmin) { %>
          <span class="badge bg-info">Super Admin</span>
          <% } %>
        </td>
        <td>
          <% if (!user.active) { %>
          <span class="badge bg-danger suspended-badge">Suspended</span>
          <% } else { %>
          <span class="badge bg-success">Active</span>
          <% } %>
        </td>
        <td>
          <%= user.createdDate ? new
          Date(user.createdDate).toLocaleDateString("en-US") : '' %>
        </td>
        <td>
          <div class="btn-group">
            <% if (!user.isAdmin && !user.isSuperAdmin) { %>
            <button type="button" class="btn btn-primary btn-sm make-admin-button" data-user-id="<%= user.id %>">
              <i class="fas fa-user-shield"></i> Make Admin
            </button>
            <% } else if (user.isAdmin && !user.isSuperAdmin) { %>
            <button type="button" class="btn btn-secondary btn-sm make-user-button" data-user-id="<%= user.id %>">
              <i class="fas fa-user"></i> Make User
            </button>
            <% } %> <% if (user.active && !user.isSuperAdmin) { %>
            <button type="button" class="btn btn-warning btn-sm suspend-user-button" data-user-id="<%= user.id %>">
              <i class="fas fa-user-slash"></i> Suspend User
            </button>
            <% } else if (!user.active && !user.isSuperAdmin) { %>
            <button type="button" class="btn btn-success btn-sm unsuspend-user-button" data-user-id="<%= user.id %>">
              <i class="fas fa-user-check"></i> Unsuspend User
            </button>
            <% } %> <% if (!user.isSuperAdmin) { %>
            <button type="button" class="btn btn-danger btn-sm delete-user-button" data-user-id="<%= user.id %>">
              <i class="fas fa-trash"></i> Delete User
            </button>
            <% } %>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } %>
</div>

<!-- load the script after users HTML is loaded -->
<script src="/js/admin/makeAdminOrUser.js" type="application/javascript"></script>
<script src="/js/admin/suspendUnsuspendUser.js" type="application/javascript"></script>
<script src="/js/admin/deleteUser.js" type="application/javascript"></script>