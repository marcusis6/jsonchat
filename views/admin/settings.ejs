<div id="settings-tab" class="tab-pane fade">
  <h2 style="display: none" id="usrId"></h2>
  <div class="row">
    <div class="col-sm-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-comments"></i> Chat</h5>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="chat-toggle" />
            <label class="form-check-label" for="chat-toggle">ON / OFF</label>
          </div>
        </div>
        <div class="card-footer">
          <button type="button" class="btn btn-secondary btn-sm">
            <i class="fas fa-file-download"></i> Download Chat
          </button>
          <button type="button" class="btn btn-danger btn-sm float-right">
            <i class="fas fa-trash"></i> Delete Chat
          </button>
        </div>
      </div>
    </div>
    <div class="col-sm-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-bullhorn"></i> Notice</h5>
          <div class="form-group">
            <label for="notice-body">Message:</label>
            <textarea id="notice-body" class="form-control" placeholder="Type here..." autofocus></textarea>
          </div>
        </div>
        <div class="card-footer">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-pencil-alt"></i> Update Notice
          </button>
          <button type="button" class="btn btn-danger btn-sm float-right">
            <i class="fas fa-trash"></i> Delete Notice
          </button>
        </div>
      </div>
    </div>
  </div>
</div>